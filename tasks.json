{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "commit reminder",
            "type": "npm",
            "script": "notify",
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
              },
            "presentation": {
                "revealProblems": "onProblem",
                "panel": "dedicated"
            },
            "group": "none",
            "runOptions": {"runOn": "folderOpen"}
        }
    ]
}